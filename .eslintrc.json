{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ignorePatterns": ["dist"],
  "rules": {
    "no-console": "warn",
    "no-underscore-dangle": ["error", { "allowAfterThis": true, "allowAfterThisConstructor": true }],
    "class-methods-use-this": "off",
    "no-bitwise": "off",
    "max-len": ["warn", { "code": 120, "tabWidth": 2 }],
    "import/prefer-default-export": "off",
    "no-continue": "warn",
    "no-param-reassign": "warn"
  }
}
